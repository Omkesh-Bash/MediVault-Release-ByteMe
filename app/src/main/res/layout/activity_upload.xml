<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/mv_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="50dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <!-- Header -->
        <TextView
            android:id="@+id/tvHeader"
            android:text="Upload Report"
            android:textColor="@color/mv_primary"
            android:textStyle="bold"
            android:textSize="26sp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- File Picker -->
        <LinearLayout
            android:id="@+id/cardSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:text="Select File (PDF / Image)"
                android:textColor="@color/mv_text"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/bg_outlined"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/ivFileIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_upload" />

                <TextView
                    android:id="@+id/tvFileName"
                    android:layout_marginLeft="10dp"
                    android:text="No file selected"
                    android:textColor="@color/mv_subtext"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Details Card -->
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/etTitle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Report Title"
                android:padding="12dp"
                android:background="@drawable/bg_outlined"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/etType"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Type (Blood Test, X-Ray...)"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_outlined"
                android:textSize="16sp"/>

            <!-- Date Picker -->
            <EditText
                android:id="@+id/etDate"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Select Date"
                android:focusable="false"
                android:clickable="true"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_outlined"
                android:textSize="16sp"/>



        </LinearLayout>

        <!-- Upload Button -->
        <Button
            android:id="@+id/btnUpload"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Upload Report"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_primary_btn"/>
    </LinearLayout>
</ScrollView>
